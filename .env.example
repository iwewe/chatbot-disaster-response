# ============================================
# EMERGENCY CHATBOT CONFIGURATION
# ============================================
# Copy this file to .env and fill in the values

# ============================================
# SERVER CONFIGURATION
# ============================================
NODE_ENV=production
PORT=3000
API_BASE_URL=https://your-domain.com

# ============================================
# DATABASE
# ============================================
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/emergency_chatbot

# ============================================
# REDIS (Queue & Cache)
# ============================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# ============================================
# JWT AUTHENTICATION
# ============================================
JWT_SECRET=change-this-to-random-string-in-production
JWT_EXPIRES_IN=7d

# ============================================
# WHATSAPP CLOUD API
# ============================================
# Get from Meta Business: https://developers.facebook.com/apps
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id
WHATSAPP_ACCESS_TOKEN=your_permanent_access_token
WHATSAPP_VERIFY_TOKEN=your_custom_verify_token_for_webhook
WHATSAPP_BUSINESS_ACCOUNT_ID=your_business_account_id

# ============================================
# TELEGRAM BOT (untuk notifikasi admin)
# ============================================
# Get from @BotFather
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_ADMIN_CHAT_ID=your_telegram_chat_id_or_group_id

# ============================================
# OLLAMA (Local LLM)
# ============================================
OLLAMA_BASE_URL=http://ollama:11434
OLLAMA_MODEL=qwen2.5:7b
OLLAMA_TIMEOUT=30000
OLLAMA_FALLBACK_ENABLED=true

# ============================================
# SYSTEM CONFIGURATION
# ============================================
# Auto-assign reports with urgency CRITICAL to this volunteer phone number
AUTO_ASSIGN_CRITICAL_TO=+628123456789

# Trust level untuk auto-verify (1-5, default: 3)
AUTO_VERIFY_TRUST_LEVEL=3

# Rate limiting (requests per minute per phone number)
RATE_LIMIT_PER_MINUTE=10

# Data retention (days)
DATA_RETENTION_DAYS=180

# Enable development features
DEBUG_MODE=false
LOG_LEVEL=info
